<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.ProductActivity" android:background="@android:color/white">

    <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/productTitleTextView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:gravity="center|start" app:layout_constraintStart_toEndOf="@+id/backButton"
            android:layout_marginStart="16dp" android:text="@string/product"/>
    <ImageView
            android:layout_height="30dp" app:srcCompat="?attr/homeAsUpIndicator"
            android:id="@+id/backButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_width="30dp"
            android:contentDescription="@string/app_name"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/productListView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/productTitleTextView3"/>

</android.support.constraint.ConstraintLayout>